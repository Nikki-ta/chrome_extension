{
  "manifest_version": 2,
  "name": "Digital Notice Board",
  "version": "1.0",
  "description": "Opens a new tab with a digital notice board.",
  "permissions": [
    "tabs","storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    "index.html"
  ]
}
